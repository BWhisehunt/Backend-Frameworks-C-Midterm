@model midterm_project.Models.Pet

@{
    ViewData["Title"] = "Detail";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-md-6">
            <img src="@Model.ImgUrl" class="img-fluid rounded" alt="@Model.Name" />
        </div>

        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p>@Model.Type</p>
            <p>@Model.Description</p>
            <p>Price: @Model.Price</p>
            <p>Age: @Model.Age</p>
        
            <div class="mt-3">
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.PetId">Edit</a>
                <a class="btn btn-sm btn-primary" asp-controller="Pet" asp-action="List">Back To List</a>
            </div>
        </div>
    </div>
</div>